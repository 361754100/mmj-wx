<!--index.wxml-->
<view class="container">

  <view id="search_bar">
    <ul>
        <li style="width:15%;">
          <span class="iconfont icon-thd-scan"></span>
          <span class="txt_title">扫一扫</span>
        </li>
        <li style="width:70%; padding-top:3px;">
          <view class="weui-search-bar__form">
            <view class="weui-search-bar__box">
                <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                <input type="text" class="weui-search-bar__input" placeholder="请输入商品名称" 
                value="{{SearchData.value}}" bindinput='SearchInput' bindconfirm="SearchConfirm" />
            </view>
          </view>
        </li>
        <li style="width:15%;">
          <span class="iconfont icon-thd-pingjia"></span>
          <span class="txt_title">消息</span>
        </li>
    </ul>
  </view>

  <view id="main_bar">
    <image src="../images/products.jpg" style="border:0px; width: 100%; height: 100%; "></image>
  </view>

  <view id="navigator_bar">
      <ul id="navigator_bar_ul">
        <li>
          <span class="iconfont icon-thd-weibiaoti-"></span>
          <span class="txt_title">首页</span>
        </li>
        <li>
          <span class="iconfont icon-thd-shangpinfenlei"></span>
          <span class="txt_title">分类</span></li>
        <li>
          <span class="iconfont icon-thd-gouwuche"></span>
          <span class="txt_title">购物车</span>
        </li>
        <li>
          <span class="iconfont icon-thd-wode1"></span>
          <span class="txt_title">我的</span>
        </li>
      </ul>
  </view>

</view>


